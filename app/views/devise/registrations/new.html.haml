.row
  .col-md-4.col-md-offset-4
    %h2 Sign up
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :defaults => {:wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' }}) do |f|
      = f.error_notification
      = f.input :email, :required => true, :autofocus => true
      = f.input :password, :required => true
      = f.input :password_confirmation, :required => true
      = f.button :submit, "Sign up", :class => 'btn btn-lg btn-primary btn-block'
    = render "devise/shared/links"

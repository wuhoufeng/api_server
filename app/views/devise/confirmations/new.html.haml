.row
  .col-md-4.col-md-offset-4
    %h2 Resend confirmation instructions
    = simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }, :defaults => {:wrapper_html => {:class => 'form-group'}}) do |f|
      = f.error_notification
      = f.full_error :confirmation_token
      .form-inputs
        = f.input :email, :required => true, :autofocus => true, :input_html => { :class => 'form-control' }
      .form-actions
        = f.button :submit, "Resend confirmation instructions", :class => 'btn btn-lg btn-primary btn-block'
    = render "devise/shared/links"
